<%= form_for(route) do |f| %>
    <%= render 'common/errors', resource: @route %>

    <div class="field">
    <%= f.label :name, "Название" %>
    <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :railway_station_ids, "Станции" %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, { multiple: true } %>
    </div>
    
    <div class="field">
    <%= f.submit  "#{ route.new_record? ? 'Создать' : 'Изменить' }"%>
    </div>
<% end %>
