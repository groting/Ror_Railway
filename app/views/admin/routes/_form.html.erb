<%= form_for([:admin, route]) do |f| %>
    <%= render 'common/errors', resource: @route %>

    <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :railway_station_ids, t('.stations') %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, { multiple: true } %>
    </div>
    
    <div class="field">
    <%= f.submit  t('.submit', action: route.new_record? ? 'Создать' : 'Изменить')%>
    </div>
<% end %>
